<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% trans %}Welcome!{% endtrans %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/bundles/sondagesurvey/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('/bundles/sondagesurvey/css/bootstrap-responsive.css') }}" rel="stylesheet">
            <link href="{{ asset('/bundles/sondagesurvey/css/custom.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	<div class="logo">Survey</div>
	<section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                    <nav>
                     <div class="navbar">
                      <div class="navbar-inner">
                          {% set currentPath = path(app.request.attributes.get('_route')) %}
                          <div class="container">
                              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                  <span class="icon-bar"></span>
                                  <span class="icon-bar"></span>
                                  <span class="icon-bar"></span>
                              </a>
                              <div class="nav-collapse">
                                <ul class="nav">
                                    <li {% if currentPath == '/' %} class='active' {% endif %}><a href="/">{% trans %}Home{% endtrans %}</a></li>
                                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                        <li class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown" href="{{ path('fos_user_profile_show') }}"> {% trans %}Connected with{% endtrans %} {{ app.user.username }} <b class="caret"></b></a>
                                            <ul class="dropdown-menu">
                                                <li><a href="{{ path('sondage_survey_list') }}">{% trans %}My surveys{% endtrans %}</a></li>
                                                <li><a href="{{ path('sondage_survey_edit') }}">{% trans %}Create new survey{% endtrans %}</a></li>
                                            </ul>
                                        </li>
                                        <li {% if currentPath == path('sondage_configuration') %} class='active' {% endif %}><a href="{{ path('fos_user_security_logout') }}">{% trans %}Settings{% endtrans %}</a></li>

                                        <li {% if currentPath == path('fos_user_security_login') %} class='active' {% endif %}><a href="{{ path('fos_user_security_logout') }}">{% trans %}Logout{% endtrans %}</a></li>
                                    {% else %}
                                        <li {% if currentPath == path('fos_user_security_login') %} class='active' {% endif %}><a href="{{ path('fos_user_security_login') }}">{% trans %}Login{% endtrans %}</a></li>
                                        <li {% if currentPath == path('fos_user_registration_register') %} class='active' {% endif %}><a href="{{ path('fos_user_registration_register') }}">{% trans %}Register{% endtrans %}</a></li>
                                    {% endif %}
                                </ul>
                              </div>
                          </div>
                      </div>
                     </div>
                    </nav>
                    {% endblock %}
                </div>

            </header>

            <section class="main-col">
                <h2>{% block page_title %}{% endblock %}</h2>
                <h3>{% block page_tagline %}{% endblock %}</h3>
                {% block body %}{% endblock %}
            </section>

            <div id="footer">
                {% block footer %}
                {% endblock %}
            </div>
        </section>
        {% block javascripts %}
            <script src="{{ asset('/bundles/sondagesurvey/js/jquery-2.0.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/sondagesurvey/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
