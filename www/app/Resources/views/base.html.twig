<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/bundles/sondagesurvey/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	<section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                    <nav>
                     <div class="navbar">
                      <div class="navbar-inner">
                        <ul class="nav">
                          {% set currentPath = path(app.request.attributes.get('_route')) %}
                          <li {% if currentPath == '/' %} class='active' {% endif %}><a href="/">Home</a></li>
                          <li {% if currentPath == path('fos_user_security_login') %} class='active' {% endif %}><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                          <li {% if currentPath == path('fos_user_registration_register') %} class='active' {% endif %}><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                        </ul>
                      </div>
                     </div>
                    </nav>
                    {% endblock %}
                </div>

                <hgroup>
                    <h2>{% block page_title %}{% endblock %}</h2>
                    <h3>{% block page_tagline %}{% endblock %}</h3>
                </hgroup>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                {% endblock %}
            </div>
        </section>
        {% block javascripts %}
            <script src="{{ asset('/bundles/sondagesurvey/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
