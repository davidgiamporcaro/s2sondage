<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <div class="control-group">
        <label for="username" class="control-label">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            {{ form_widget(form.username) }}
        </div>
    </div>
    <div class="control-group">
        <label for="email" class="control-label">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="control-group">
        <label for="password" class="control-label">{{ 'form.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            {{ form_widget(form.plainPassword.first) }}
        </div>
    </div>
    <div class="control-group">
        <label for="password_confirmation" class="control-label">{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            {{ form_widget(form.plainPassword.second) }}
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input class="btn" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </div>
</form>
