<div class="row">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
        {{ form_widget(form._token) }}
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">{{ 'form.password'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label for="password_confirmation" class="col-sm-2 control-label">{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default" type="submit" >{{ 'registration.submit'|trans({}, 'FOSUserBundle') }} </button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <p class="text-error flash-{{ type }}">{{ message }}</p>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
     </form>
</div>
