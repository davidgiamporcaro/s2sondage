<div id="myCarousel" class="carousel slide span9" style="margin-top: 20px">
    <!-- Carousel items -->
    <div class="carousel-inner carousel-bg-black">
        {% for slideshow_picture in slideshow_pictures %}
            {% if (loop.index == 1) %}
                <div class="active item"><img  class="img-responsive" src="{{ slideshow_picture.documents.webpath }}" alt="{{ slideshow_picture.documents.alt }}" /></div>
            {% else %}
                <div class="item"><img class="img-responsive" src="{{ slideshow_picture.documents.webpath }}" alt="{{ slideshow_picture.documents.alt }}" /></div>
            {% endif %}
        {% endfor %}
    </div>
    <!-- Carousel nav -->
    <ol class="carousel-indicators">
    {% for slideshow_picture in slideshow_pictures %}
        {% if (loop.index == 1) %}
            <li data-target="#myCarousel" class="active" data-slide-to="{{ loop.index0 }}"></li>
        {% else %}
            <li data-target="#myCarousel" class="" data-slide-to="{{ loop.index0 }}"></li>
        {% endif %}
    {% endfor %}
    </ol>
</div>

