{% extends 'SondageSurveyBundle::layout.html.twig' %}
{% block body %}
Hello configuration !
    <form action="{{ path('sondage_settings_configure') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
        {{ form_widget(form._token) }}
        <div class="control-group span12">
            <label for="title" class="control-label">{{ 'Title'|trans({}, 'SondageSettingsBundle') }}</label>
            <div class="controls">
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="control-group span12">
            <label for="description" class="control-label">{{ 'Files'|trans({}, 'SondageSettingsBundle') }}</label>
            <div class="controls">
                {{ form_widget(form.documents) }}
            </div>
        </div>
        <div class="control-group span12">
            <div class="controls">
                <input class="btn" type="submit" value="{{ 'Submit'|trans({}, 'SondageSettingsBundle') }}" />
            </div>
        </div>
        {{ form_rest(form) }}
        <div class="control-group span12">
            <div class="controls">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <p class="text-{{ type }}">{{ message }}</p>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </form>
{% endblock %}
