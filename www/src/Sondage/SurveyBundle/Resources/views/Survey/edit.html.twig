{# src/Sondage/SurveyBundle/Resouces/views/Survey/add.html.twig #}
{% extends 'SondageSurveyBundle::layout.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <article class="survey">
        <form action="{{ path('sondage_survey_edit', {'id': survey.id}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
            {{ form_widget(form._token) }}
            <div class="form-group">
                <label for="title" class="col-md-1 control-label">{{ 'Title'|trans({}, 'SondageSurveyBundle') }}</label>
                <div class="col-md-11">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-md-1 control-label">{{ 'Description'|trans({}, 'SondageSurveyBundle') }}</label>
                <div class="col-md-11">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    <button class="btn btn-default" type="submit" >{{ 'Submit'|trans({}, 'SondageSurveyBundle') }}</button>
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <p class="text-{{ type }}">{{ message }}</p>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </form>
    </article>
{% endblock %}