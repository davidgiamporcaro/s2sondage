{# src/Sondage/SurveyBundle/Resouces/views/Survey/add.html.twig #}
{% extends 'SondageSurveyBundle::layout.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <article class="survey">
        <form action="{{ path('sondage_survey_edit', {'id': survey.id}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
            {{ form_widget(form._token) }}
            <div class="control-group span12">
                <label for="title" class="control-label">{{ 'form.title'|trans({}, 'SondageSurveyBundle') }}</label>
                <div class="controls">
                    {{ form_widget(form.title) }}
                </div>
            </div>
            <div class="control-group span12">
                <div class="controls">
                    <input class="btn" type="submit" value="{{ 'form.submit'|trans({}, 'SondageSurveyBundle') }}" />
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="control-group span12">
                <div class="controls">
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <p class="text-{{ type }}">{{ message }}</p>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </form>
    </article>
{% endblock %}