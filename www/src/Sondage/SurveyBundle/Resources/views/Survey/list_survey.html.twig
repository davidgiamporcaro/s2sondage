<article>
    <ul class="list">
        {% for survey in pagination %}
            {% if (loop.index % 2) == 0 %}
                <li style="background-color: white">
            {% else %}
                <li style="background-color: #ccc">
            {% endif %}
            <a href="{{ path('sondage_survey_edit') }}/{{ survey.id }}"><i class="survey-icon-pencil"></i></a>
            <a href="#" onClick="javascript:if (confirm('{% trans %}Are you sure ?{% endtrans %}')) { DeleteSurvey({{ survey.id }}) }"><i class="survey-icon-remove"></i></a>
            <a href="{{ path('sondage_survey_display') }}/{{ survey.id }}" alt="{{ survey.description|striptags }}" title="{{ survey.description|striptags }}">{{ survey.title }}</a>
            </li>
        {% endfor %}
    </ul>
    {{ knp_pagination_render(pagination) }}
</article>